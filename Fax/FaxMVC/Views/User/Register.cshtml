    <form name="register" role="form" novalidate class="form-validation">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="create-bloodSugar-details">
                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="text" name="Name" required minlength="2">
                                <label class="form-label">Name</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="text" name="LastName" required minlength="2">
                                <label class="form-label">Last Name</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="text" name="Email" required minlength="2">
                                <label class="form-label">Email</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="text" name="Username" required minlength="2">
                                <label class="form-label">Username</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="number" name="Semester" required minlength="2">
                                <label class="form-label">Semester</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="password" name="Password" required minlength="2">
                                <label class="form-label">Password</label>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary waves-effect" asp-controller="User" asp-action="RegistrationHandler">Save</button>
        </div>
    </form>


</div>

